<RadzenCard Style="background-image: linear-gradient(180deg, rgb(58, 71, 77) 0%, rgb(58, 71, 77) 70%);margin-left: -26px;">
    <RadzenPanelMenu Style="width:250px; margin-top: -22px;">
            <RadzenPanelMenuItem Text="Home" Path="/" Icon="home"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Account" Icon="account_box">
                <AuthorizeView>
                    <Authorized>
                        <RadzenPanelMenuItem Text=@context.User.Identity.Name Path="/identity/Account/Manage" Icon="account_box"></RadzenPanelMenuItem>
                    </Authorized>
                    <NotAuthorized>
                        <RadzenPanelMenuItem Text="Login" Path="/identity/Account/Login" Icon="account_box"></RadzenPanelMenuItem>
                    </NotAuthorized>
                </AuthorizeView>
            </RadzenPanelMenuItem>

            <RadzenPanelMenuItem Text="Study" Icon="book">
                <RadzenPanelMenuItem Text="Dashboard" Path="/study/dashboard" Icon="dashboard"></RadzenPanelMenuItem>
            </RadzenPanelMenuItem>

            <RadzenPanelMenuItem Text="Web Editor" Icon="mode_edit">
                <RadzenPanelMenuItem Text="Html Editor"  Path="html-editor" Icon="format_align_center" ></RadzenPanelMenuItem>
            </RadzenPanelMenuItem>
    </RadzenPanelMenu>
</RadzenCard>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    public void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
